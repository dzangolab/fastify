    "@types/nodemailer": "6.4.8",
    "@types/nodemailer-html-to-text": "3.1.0",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "@vitest/coverage-istanbul": "0.32.2",
    "eslint": "8.43.0",
    "eslint-config-custom": "0.36.0",
    "fastify": "4.10.2",
    "fastify-plugin": "4.4.0",
    "mercurius": ">=12.2.0",
    "mjml": "4.14.1",
    "prettier": "2.8.8",
    "tsconfig": "0.36.0",
    "typescript": "4.9.5",
    "vite": "4.3.9",
    "vitest": "0.32.2"
  },
  "peerDependencies": {
    "@dzangolab/fastify-config": "0.36.0",
    "@dzangolab/fastify-mercurius": "0.36.0",
    "fastify": ">=4.9.2",
    "fastify-plugin": ">=4.3.0",
    "mercurius": ">=12.2.0",
    "mjml": ">=4.13.0"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  }
