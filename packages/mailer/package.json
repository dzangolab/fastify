    "mjml": "4.15.3",
    "prettier": "3.3.3",
    "tsconfig": "workspace:*",
    "typescript": "4.9.5",
    "vite": "4.5.3",
    "vitest": "2.0.5"
  },
  "peerDependencies": {
    "@dzangolab/fastify-config": "workspace:*",
